<div class="container">

  <h1>Add a New Review</h1>
  <h2><%= @restaurant.name %></h2>



  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, :collection => [1,2,3,4,5] %>
    <%= f.submit class: 'btn btn-primary mt-2' %>
  <% end %>

  <%= link_to 'Back', restaurants_path %>
</div>
