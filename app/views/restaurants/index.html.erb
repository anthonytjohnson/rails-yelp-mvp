<div class="container">
  <h1>Restaurants</h1>
  <%= link_to 'New Restaurant', new_restaurant_path, class: "btn btn-primary mt-4 mb-4" %>

  <div class="cards">
    <% @restaurants.each do |restaurant| %>
    <%= link_to restaurant_path(restaurant) do %>
      <%= render 'restaurants/card', restaurant: restaurant  %>
    <% end %>
    <% end %>
  </div>


</div>
